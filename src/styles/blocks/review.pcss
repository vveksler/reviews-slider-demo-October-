.review {
  &::before {
    content: '';
    display: block;
    width: 75px;
    height: 63px;
    background: svg-load(
      "quote.svg",
      fill=rgba($text-color, 0.05),
      width=100%,
      height=100%
    )
      center center no-repeat;
    flex-shrink: 0;
    margin-right: 2%;
  }
}

.review__item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.review__content {
  margin: 0;
  margin-bottom: 30px;
}

.review__person-info {
  display: flex;
  align-items: center;
  font-style: normal;
}

.review__avatar {
  margin-right: 30px;
  width: 74px;
  min-width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;

  @include phones {
    margin-right: 8%;
  }
}

.review__avatar-img {
  object-fit: cover;
  object-position: top;
  width: 100%;
  height: 100%;
}

.review__person-desc {
  flex: 1;
}

.review__author {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5%;

  @include phones {
    margin-bottom: 0;
  }
}
